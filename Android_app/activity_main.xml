<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.esp.MainActivity"
    android:background="@drawable/indoorbg" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:text="Enter url:"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/url"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/title_bar"
        android:backgroundTint="@android:color/holo_green_light"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <Button
        android:id="@+id/go"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="17dp"

        android:text="GO"
        />


    <Button
        android:id="@+id/temp"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:text="Temperature" />

    <Button
        android:id="@+id/humidity"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"

        android:text="humidity" />

    <Button
        android:id="@+id/moisture"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:text="MOISTURE" />

    <TextView
        android:id="@+id/readt"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="110dp"
        android:background="@android:color/holo_green_light"
        android:text="Reading"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/readh"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="170dp"
        android:background="@android:color/holo_green_light"
        android:text="Reading"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/readm"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="230dp"

        android:background="@android:color/holo_green_light"
        android:text="Reading"
        android:textAlignment="center" />

    <Button
        android:id="@+id/fan"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="330dp"
        android:autofillHints="@id/fan"
        android:background="@drawable/fanf"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="src_in"
        android:foreground="@drawable/fanf"
        android:text="fan" />

    <Button
        android:id="@+id/pump"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/pump"
        android:text="PUMP"
        android:textColor="@android:color/holo_red_dark" />


    <Button
        android:id="@+id/light"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="330dp"

        android:background="@drawable/light"
        android:text="LIGHT" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="400dp"
        android:background="@android:color/darker_gray"
        android:text="result"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="450dp"
        android:background="@android:drawable/ic_media_rew"

        android:tooltipText="Left" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="450dp"
        android:background="?android:attr/colorPrimary"
        android:text="Positioning"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="450dp"
        android:background="@android:drawable/ic_media_ff"

        android:tooltipText="Right" />
</RelativeLayout>
